<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/night_normal">

    <!-- Toolbar -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/invisible"
        android:elevation="0dp" />

    <!-- Buttons -->
    <carbon.widget.LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Button create -->
        <carbon.widget.Button
            android:id="@+id/main_button_create"
            android:layout_width="152dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|right"
            android:background="@color/rose_normal"
            android:drawableLeft="@drawable/ic_button_create"
            android:drawablePadding="4dp"
            android:paddingBottom="0dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="0dp"
            android:text="@string/main_button_create"
            android:textAllCaps="true"
            android:textColor="@color/frost"
            android:textSize="14sp"
            app:carbon_cornerRadius="2dp"
            app:carbon_elevation="2dp"
            app:carbon_fontPath="Roboto-Medium.ttf"
            app:carbon_rippleColor="@color/ice"
            app:carbon_touchMarginBottom="6dp"
            app:carbon_touchMarginLeft="6dp"
            app:carbon_touchMarginRight="6dp"
            app:carbon_touchMarginTop="6dp" />

        <!-- Button find -->
        <carbon.widget.Button
            android:id="@+id/main_button_find"
            android:layout_width="152dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|right"
            android:layout_marginTop="16dp"
            android:background="@color/rose_normal"
            android:drawableLeft="@drawable/ic_button_find"
            android:drawablePadding="4dp"
            android:paddingBottom="0dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="0dp"
            android:text="@string/main_button_find"
            android:textAllCaps="true"
            android:textColor="@color/frost"
            android:textSize="14sp"
            app:carbon_cornerRadius="2dp"
            app:carbon_elevation="2dp"
            app:carbon_fontPath="Roboto-Medium.ttf"
            app:carbon_rippleColor="@color/ice"
            app:carbon_touchMarginBottom="6dp"
            app:carbon_touchMarginLeft="6dp"
            app:carbon_touchMarginRight="6dp"
            app:carbon_touchMarginTop="6dp" />

    </carbon.widget.LinearLayout>

</carbon.widget.RelativeLayout>

